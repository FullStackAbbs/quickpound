<%- include('header'); -%>
<body>
  <h1>Feed</h1>
  <ul>

    // refer to route.js line 27-35 where routes spits back out the posts information
  <% for(var i=0; i<posts.length; i++) {%> // here we ask that the array of post be avaiable for page rendering
    <li>
      <a href="/post/<%= posts[i]._id%>"> // here we use the a tag of the UNIQUE ID to attain the img source path. , note the /post/postId has it so the singular page renders for the specfic photo when clicked
        <img src="<%= posts[i].imgPath%>"> // here we use the image path to render the actually image path within our hard driver/folder
      </a>
      <span><%= posts[i].caption %></span> // here we have the caption rendered for this particular post
      <span><%= posts[i].likes %></span> // here we have the likes printed/rendered for this particular post
      <span><i class="fa fa-heart" aria-hidden="true"></i></span>
      <span><i class="fa fa-trash" aria-hidden="true"></i></span>
    </li>
  <% } %>
  </ul>
<%- include('footer'); -%>
